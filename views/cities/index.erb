<h1>Here is a list of all cities</h1>

<button onclick="window.location.href = '/cities/new';">Add a city</button>

<% for city in @cities %>
  <p><%= city.name() %></p>
  <button onclick="window.location.href = '/cities/<%= city.id() %>';">Show City</button>
  <button onclick="window.location.href = '/cities/<%= city.id() %>/edit';">Edit City</button>
  <form action="/cities/<%= city.id %>/delete" method="POST"><input type="submit" value="Delete City">
  </form>


<% end %>
