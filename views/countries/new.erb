<h1>Add a country here</h1>

<h3>Where To?</h3>

<form action="/countries" method="POST">


  <label for="country">Country:</label>
  <input required type="text" placeholder="e.g. Italy" id="country" name="name">
  <br>
  <br>

<input type="radio" name="status" value="visited" id="visited">
  <label for="visited">Add to visited</label>
<input type="radio" name="status" value="going" id="going">
  <label for="going">Add to wishlist</label>


<br>

  <button type="Submit">Submit</button>

</form>
